#include "Evaluators/FFI"

namespace AST {
	struct Symbol;
};

namespace FFIs {

struct LibraryLoader : Evaluators::BuiltinOperation {
private:
	struct LibraryLoaderP* p;
public:
	LibraryLoader(AST::Node* fallback);
	virtual AST::Node* execute(AST::Node* argument); /* argument is the library to be loaded. Result is a CLibrary or nil */
	virtual std::string str(void) const; /* FIXME str for fallback */
};
struct CLibrary : Evaluators::FFI { /* routine loader */
private:
	struct CLibraryP* p;
public:
	bool goodP() const;
	CLibrary(const char* name);
	virtual AST::Node* executeLowlevel(AST::Node* argument); /* argument is the name (symbol). Result is a CProcedure */
	virtual std::string str(void) const;
};
struct CProcedure : AST::Box {
	CProcedure(void* native);
	virtual std::string str(void) const;
};

};
#endif /* ndef __5D_FFIs_FFIs_H */
