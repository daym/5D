#include "AST/AST"
#include "Evaluators/FFI"

namespace AST {
	struct Symbol;
};

namespace FFIs {

struct CLibrary;
struct LibraryLoader {
public:
	struct LibraryLoaderP* p; // private
	LibraryLoader(AST::Node* fallback);
	virtual CLibrary* execute(AST::Node* argument); /* argument is the library to be loaded. Result is a CLibrary or nil */
};
struct CLibrary { /* routine loader */
public:
	struct CLibraryP* p; // private
	bool goodP() const;
	CLibrary(const char* name);
	virtual AST::Node* executeLowlevel(AST::Node* argument, int argumentCount, AST::Symbol* signature); /* argument is the name (symbol). */
};

};
#endif /* ndef __5D_FFIs_FFIs_H */
