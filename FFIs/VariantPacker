namespace FFIs {
#ifdef WIN32
VARIANT encodeVariantCXX(AST::Node* source);
AST::Node* decodeVariantCXX(VARIANT value);
#else
#include <stdint.h>
typedef struct {
	uint32_t vt;
	char dummy[14];
} VARIANT;
static inline VARIANT encodeVariantCXX(AST::Node* source) {
	VARIANT result = {0};
	return(result);
}
static inline AST::Node* decodeVariantCXX(VARIANT value) {
	return(NULL);
}
#endif
void encodeVariant(AST::Node* source, VARIANT* value);
AST::Node* decodeVariant(VARIANT* value);
};
#endif /* __FFIS_VARIANT_PACKER_H */
