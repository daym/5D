#include <string>

namespace AST {

struct Node {
	virtual std::string str(void) const;
};


struct Cons : Node {
	Node* head;
	Cons* tail;
	virtual std::string str(void) const;
};

std::string str(const Cons& a);

struct Literal : Node {
	const char* text;
	virtual std::string str(void) const;
};


std::string str(const Literal& a);

Cons* cons(Node* head, Cons* tail);
Literal* literal(const char* text);
}; /* namespace AST */
#endif /* __AST_H */
