void REPL_add_to_environment_simple(struct REPL* self, AST::Symbol* name, AST::NodeT value);
static void REPL_add_static_builtin_binding(struct REPL* self, AST::Symbol* name, AST::NodeT value) {
	REPL_add_to_environment_simple(self, name, value);
}
