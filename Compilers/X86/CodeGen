#ifndef __COMPILERS_X86_CODEGEN_H
#define __COMPILERS_X86_CODEGEN_H
#include "Compilers/CodeGen"
namespace Compilers {
namespace X86 {
struct CodeGen : Compilers::CodeGen {
public:
	virtual unsigned get_size_in_bits(AST::Node* source);
	virtual void gen_push(AST::Node* source);
	virtual void gen_stack_throwaway_bits(int bit_count);
	virtual void gen_call(AST::Node* destination);
	virtual void gen_load_register(AST::Symbol* register_, AST::Node* value);
	virtual void gen_enter_frame(void);
	virtual void gen_leave_frame(void);
	virtual void gen_return(int bit_count);
	
};
}; /* end namespace X86 */
}; /* end namespace Compilers */
#endif /* ndef __COMPILERS_X86_CODEGEN_H */
