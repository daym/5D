#ifndef __NUMBERS_RATIO_H
#define __NUMBERS_RATIO_H
#include "AST/AST"
#include "Evaluators/Operation"
namespace Numbers {
	struct Ratio : AST::Node {
		AST::NodeT a; /* numerator */
		AST::NodeT b; /* denominator */
	};
	Ratio* makeRatio(AST::NodeT aa, AST::NodeT bb);
	bool ratio_P(AST::NodeT n);
	inline AST::NodeT Ratio_getA(AST::NodeT n) {
		return(((Ratio*)n)->a);
	}
	inline AST::NodeT Ratio_getB(AST::NodeT n) {
		return(((Ratio*)n)->b);
	}
DECLARE_SIMPLE_OPERATION(RatioMaker)
DECLARE_SIMPLE_OPERATION(RatioP)
DECLARE_SIMPLE_OPERATION(RatioNumeratorGetter)
DECLARE_SIMPLE_OPERATION(RatioDenominatorGetter)

};

#endif /* ndef __NUMBERS_RATIO_H */
