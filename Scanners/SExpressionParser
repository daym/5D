#include <set>
#include "Scanners/Scanner"
#include "AST/AST"
#include "AST/Symbol"
#include "Scanners/OperatorPrecedenceList"

namespace Scanners {

class SExpressionParser {
private:
	Scanner* scanner;
	AST::Cons* parse_S_list_body(void);
	AST::Cons* parse_S_list(bool B_consume_closing_brace);
	AST::Node* parse_S_Expression(void);
	inline AST::Node* parse_value(void) {
		return(scanner->consume());
	}
public:
	SExpressionParser(void);
	AST::Node* parse(AST::Symbol* terminator);
};

bool macro_operator_P(AST::Node* operator_);

}; /* end namespace */

#endif /* ndef __SCANNERS_SHUNTING_YARD_PARSER_H */
