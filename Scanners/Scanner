#ifndef __SCANNER_H
#define __SCANNER_H
#include <stdio.h>
#include <sstream>
#include <string>
#include "AST/Symbol"

namespace Scanners {

class Scanner {
protected:
	FILE* input_file;
	AST::Symbol* input_token;
	//std::stringstream matchtext;
	int position;
	virtual void parse_token(void);
	void push(FILE* input_file);
	void pop(void);
public:
	void raise_error(const std::string& expected_text, int got_text);
	void raise_error(const std::string& expected_text, std::string got_text);
};

}; /* end namespace Scanners */
#endif /* ndef __SCANNER_H */
