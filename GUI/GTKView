#ifndef __GTK_VIEW_H
#define __GTK_VIEW_H
#include <gtk/gtk.h>

namespace GUI {

class GTKView {
private:
	GtkScrolledWindow* fScrolledWindow;
	GtkDrawingArea* fDrawingArea;
	GdkGC* fGC;
public:
	GTKView(void);
	GtkWidget* widget() const;
	void repaint(GdkEventExpose* event);
	void allocate_resources(void);
};

};

#endif /* ndef __GTK_VIEW_H */
