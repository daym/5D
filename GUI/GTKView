#ifndef __GTK_VIEW_H
#define __GTK_VIEW_H
#include <gtk/gtk.h>

namespace GUI {

typedef enum {
	MODE_PERSPECTIVE,
	MODE_XY,
	MODE_XZ,
	MODE_YZ,
} GTKViewMode;

class GTKView {
private:
	GtkScrolledWindow* fScrolledWindow;
	GtkDrawingArea* fDrawingArea;
	GdkGC* fGC;
	GTKViewMode fMode;
public:
	GTKView(GTKViewMode mode);
	GtkWidget* widget() const;
	void repaint(GdkEventExpose* event);
	void allocate_resources(void);
};

};

#endif /* ndef __GTK_VIEW_H */
