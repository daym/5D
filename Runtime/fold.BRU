
define foldl \folder \initialValue \list Y\foldl
   (cond
     (empty? list) initialValue
     else (folder (foldl folder initialValue (rest list)) (head list)))

define foldr \folder \initialValue \list Y\foldr
   (cond
     (empty? list) initialValue  
     else (folder (head list) (foldr folder initialValue (rest list))))
-- foldr gives a function which replaces all cons of the list by folder and the nil of the list by initialValue.

